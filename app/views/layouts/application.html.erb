<html>
  <head>
    <meta charset="utf-8" />
    <title>Certified Connect RP</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div id="wrapper">
      <header id="header">
        <div class="inner">
          <%= link_to root_path, class: 'logo' do %>
            <span class="symbol">
              <%= image_tag 'logo.svg' %>
            </span>
            <span class="title">Certified Connect RP</span>
          <% end %>
          <nav>
            <ul>
              <li><a href="#menu">Menu</a></li>
            </ul>
          </nav>
        </div>
      </header>

      <nav id="menu">
        <h2>Menu</h2>
        <ul>
          <li><a href="http://matake.jp">Nov Matake</a></li>
          <li><a href="http://yauth.jp">YAuth.jp LLC</a></li>
          <li><a href="http://openid.net/certification/rp_testing/">RP Certification Site</a></li>
          <li><a href="https://rp.certification.openid.net:8080/log/<%= ::TestCase::RP_IDENTIFIER %>">RP Certification Test Log</a></li>
          <li><a href="https://github.com/nov/connect-rp-certified">Source Code</a></li>
        </ul>
      </nav>

      <div id="main">
        <div class="inner">
          <header>
            <h1>Certified Connect RP</h1>
            <p>
              This site is developed by <a href="http://matake.jp">@nov</a> in Ruby on Rails
              using <a href="https://github.com/nov/openid_connect">OpenID Connect gem</a>.
            </p>
          </header>
          <%= yield %>
        </div>
      </div>

      <footer id="footer">
        <div class="inner">
          <ul class="icons">
            <li>
              <a href="https://twitter.com/nov" class="icon style2 fa-twitter">
                <span class="label">Twitter</span>
              </a>
            </li>
            <li>
              <a href="https://facebook.com/matake" class="icon style2 fa-facebook">
                <span class="label">Facebook</span>
              </a>
            </li>
            <li>
              <a href="https://github.com/nov" class="icon style2 fa-github">
                <span class="label">GitHub</span>
              </a>
            </li>
          </ul>
          <ul class="copyright">
            <li>&copy; <a href="http://matake.jp">Nov Matake</a></li>
            <li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
          </ul>
        </div>
      </footer>
    </div>
  </body>
</html>
